<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.vas.dao.ScRedlistDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.renren.vas.entity.ScRedlistEntity" id="scRedlistMap">
        <result property="id" column="id"/>
        <result property="carnum" column="carNum"/>
        <result property="createtime" column="createTime"/>
        <result property="createuser" column="createUser"/>
        <result property="createreason" column="createReason"/>
        <result property="audituser" column="auditUser"/>
        <result property="audittime" column="auditTime"/>
        <result property="auditresults" column="auditResults"/>
        <result property="auditopinion" column="auditOpinion"/>
    </resultMap>

	<select id="queryObject" resultType="io.renren.vas.entity.ScRedlistEntity">
		select * from sc_redlist where id = #{value}
	</select>

	<select id="queryList" resultType="io.renren.vas.entity.ScRedlistEntity">
		select * from sc_redlist
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from sc_redlist 
	</select>
	 
	<insert id="save" parameterType="io.renren.vas.entity.ScRedlistEntity">
		insert into sc_redlist
		(
			`id`, 
			`carNum`, 
			`createTime`, 
			`createUser`, 
			`createReason`, 
			`auditUser`, 
			`auditTime`, 
			`auditResults`, 
			`auditOpinion`
		)
		values
		(
			#{id}, 
			#{carnum}, 
			#{createtime}, 
			#{createuser}, 
			#{createreason}, 
			#{audituser}, 
			#{audittime}, 
			#{auditresults}, 
			#{auditopinion}
		)
	</insert>
	 
	<update id="update" parameterType="io.renren.vas.entity.ScRedlistEntity">
		update sc_redlist 
		<set>
			<if test="carnum != null">`carNum` = #{carnum}, </if>
			<if test="createtime != null">`createTime` = #{createtime}, </if>
			<if test="createuser != null">`createUser` = #{createuser}, </if>
			<if test="createreason != null">`createReason` = #{createreason}, </if>
			<if test="audituser != null">`auditUser` = #{audituser}, </if>
			<if test="audittime != null">`auditTime` = #{audittime}, </if>
			<if test="auditresults != null">`auditResults` = #{auditresults}, </if>
			<if test="auditopinion != null">`auditOpinion` = #{auditopinion}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from sc_redlist where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from sc_redlist where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>